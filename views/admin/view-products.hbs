<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto ">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger " onclick="return confirm('Are you want to delete {{this.name}}')">Delete</a>
      </td>   
    </tr>

     {{/each}}
  </tbody>
</table>
    </div>
</section>